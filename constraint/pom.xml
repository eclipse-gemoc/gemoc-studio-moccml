<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.eclipse.gemoc.mocc</groupId>
    <artifactId>org.eclipse.gemoc.mocc.root</artifactId>
    <version>0.1.1-SNAPSHOT</version>
